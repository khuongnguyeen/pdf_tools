<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ui_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/ui_banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="6dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mAppIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/mAppTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="TextView"
                android:textColor="@color/ui_black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/mRatingBar"
                style="@style/RatingBar"
                android:progressTint="@color/colorA"
                android:progressBackgroundTint="@color/colorPrimaryOrganizeDarkMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4.7"
                android:stepSize="5" />

            <TextView
                android:id="@+id/mDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:maxLines="2"
                android:text="Sponsored"
                android:textAlignment="viewStart"
                android:textColor="@color/ui_66"
                android:textSize="10sp" />
        </LinearLayout>

        <Button
            android:id="@+id/mActionButton"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="3"
            android:background="@drawable/button_bg"
            android:text="INSTALL"
            android:textColor="@color/adButtonText"
            android:textSize="12sp"
            android:theme="@style/RatingBar" />

    </LinearLayout>
</LinearLayout>