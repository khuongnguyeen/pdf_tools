<?xml version="1.0" encoding="utf-8"?>
<io.supercharge.shimmerlayout.ShimmerLayout
    android:id="@+id/smallShimmer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="bottom"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="2dp"
    android:background="?attr/adSmallBg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/mAppIcon"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_weight="1.2"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/mAppTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="TextView"
            android:textAppearance="@style/MyCustomTextAppearance"
            android:textColor="?attr/adText"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/mRatingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:progressTint="@color/colorA"
            android:progressBackgroundTint="@color/colorPrimaryOrganizeDarkMod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4.7"
            android:stepSize="5" />


        <TextView
            android:id="@+id/mDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:maxLines="2"
            android:text="Sponsored"
            android:textAlignment="viewStart"
            android:textColor="?attr/adDescription"
            android:textSize="9sp"
            android:textStyle="italic" />

    </LinearLayout>

    <Button
        android:id="@+id/mActionButton"
        android:theme="@style/RatingBar"
        android:layout_gravity="bottom"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="3"
        android:background="@drawable/button_bg"
        android:text="INSTALL"
        android:textColor="?attr/adButtonText"
        android:textSize="12sp" />

</LinearLayout>
</io.supercharge.shimmerlayout.ShimmerLayout>